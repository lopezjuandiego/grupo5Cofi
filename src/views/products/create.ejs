<!DOCTYPE html>
<html lang="es">
    <%- include('../includes/head') %> 
       
<body>
    <%- include("../includes/header") %> 
<main>
 <section class="conttitle">
    <h2 class="title"><%= locals.title ? title : null %> </h2>
</section>
 <section class="contformulario">    

   <form class="formgral" action="/product/save" enctype="multipart/form-data" method="post">

     <label class="continput" for="origen">
        
        <select class="forminput" name="origen" id="origen">
            <% origenes.forEach(element => { %>
             <option value="<%= element.id %>"> <%= element.country %> </option>
            <% }) %>
            </select>
     </label>

     <label class="continput" for="origen">
        
        <select class="forminput" name="tipoDeGrano" id="tipoDeGrano">
            <% granos.forEach(element => { %>
             <option value="<%= element.id %>"> <%= element.tipoDeGrano  %> </option>
            <% }) %>
            </select>
     </label>



     <label class="continput" for="cantidad">
        
        <select class="forminput" name="cantidad" id="cantidad">
            <% gramos.forEach(element => { %>
             <option value="<%= element.id %>"> <%= element.Cantidad %> </option>
            <% }) %>
            </select>

   




    <label class="continput" for="precio">
        <input class="forminput"  type="number" name="precio" id="precio" placeholder="PRECIO" min="0">
    </label>

    <label class="contchek" for="oferta">OFERTA !
        <input class="formchek" type="checkbox" name="oferta" id="oferta">
    </label>

 <label class="continput" for="imagen">
        <input class="forminput1" type="file" name="imagen" id="imagen" multiple>
    </label>  

    <fieldset class="continput1">    

        <button class="boton" type="submit">CREAR</button>
    </fieldset>       
    <a class="boton1" href="/product">VOLVER</a>   
</form> 
 </section>
</main>
<%- include("../includes/footer") %> 
</body>
</html>    

