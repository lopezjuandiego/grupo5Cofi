<!DOCTYPE html>
<html lang="es">
    <%- include('../includes/head') %> 
       
<body>
    <%- include("../includes/header") %> 
<main>
 <section class="conttitle">
    <h2 class="title"><%= locals.title ? title : null %> </h2>
</section>
 <section class="contformulario">

    <form action="/product/" enctype="multipart/form-data" method="post">
     <label class="continput" for="origen">
         <input class="forminput" type="text" name="origen" id="origen" placeholder="ORIGEN DE CAFE">
     </label>

     <div>
     <label  for="tipoDeGrano"> 
        <input class="forminput"  list="tipoDeGrano"  id="tipoDeGrano" type="text" name="tipoDeGrano" placeholder="TIPO DE GRANO">
    
     <datalist id="tipoDeGrano">
         <option value="FINO"></option>
         <option value="GRUESO"></option>
     </datalist>
    </label>
    </div>

    <label class="continput" for="cantidad">
        <input class="forminput"  type="number" name="cantidad" id="cantidad" placeholder="CANTIDAD" min="0">
      
    </label>
    <label class="continput" for="precio">
        <input class="forminput"  type="number" name="precio" id="precio" placeholder="PRECIO" min="0">
    </label>
    <label  for="oferta"> OFERTA !
        <input class="forminput" type="checkbox" name="oferta" id="oferta">
    </label>
    <label class="continput" for="imagen">
        <input class="forminput1" type="file" name="imagen" id="imagen" multiple>
    </label>

    <fieldset class="continput">
        <button class="boton" type="submit">ENVIAR</button>
    </fieldset>
</form> 
 </section>
</main>
<%- include("../includes/footer") %> 
</body>
</html>    

