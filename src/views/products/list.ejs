<!DOCTYPE html>
<html lang="es">
<%- include('../includes/head.ejs') %>

    <body>
        
        <%- include("../includes/header") %>
        <main>
            <section id="article-pos">
                <article class="flex-text">

                </article>
            </section>

            <section class="contbannerlist">
                <h2 class="bannerlist">
                    <%= locals.title ? title : null %>
                </h2>

            </section>
         
<% if (user != null && user.admin) { %>
 


            <picture class="contemojimas">
                <a href="/product/create"><i class="fas fa-plus-circle"></i></a>
              
            </picture>

            <section class="contlistado">
                <% if (locals.products) { %>
                    
                    <% if (products.length> 0) { %>
                        
                        <% products.forEach(product=> { %>
                            <article class="listagral">
                                <a class="contentlista" href="/product/<%= product.id %> ">
                                    <% if (product.imagen) { %>
                                        <img class="contentimagen" src="/uploads/<%= product.imagen.url %> " alt=""
                                            srcset="">
                                        <% } %>
                                            <ul class="contlis">
                                                <li class="lilista">ORIGEN: <%= product.origen %>
                                                </li>
                                                <li class="lilista">TIPO DE GRANO: <%= product.tipoDeGrano %>
                                                </li>
                                                <li class="lilista">CANTIDAD: <%= product.cantidad %> gr</li>
                                                <li class="lilista">PRECIO: $ <%= product.precio %>
                                                </li>
                                            </ul>
                                    </a>
                            </article>
                            <% }) %>
                                <% } else { %>
                                    <section class="contsinproducto">
                                        <h3 class="titulolist">Agregá algunos productos! </h3>
