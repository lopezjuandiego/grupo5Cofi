<!DOCTYPE html>
<html lang="es">
    <%- include('../includes/head.ejs') %> 
       
<body>
    <%- include("../includes/header") %> 
    <main>
        <section class="contbannerlist">
            <h2 class="bannerlist"><%= locals.title ? title : null %> </h2>

        </section>
        <section class="contlistado">
        <% if (locals.products) { %> <!--CONSULTO SI AGREGO PRODUCTOS A LA LISTA --> 
            <%  if (products.length > 0) { %>  <!--CONSULTO SI LA CANTIDAD DE PRODUCTOS ES MAYOR A 0 --> 
                
        <ul>
        <% products.forEach(product => { %>
        
       
        
        <a href="/products/<%= product.id %> ">
        
            <span> <%= product.origen %> </span>
            <span> <%= product.tipoDeGrano %> </span>
            <span> <%= product.cantidad %> </span>
            <span> <%= product.precio %> </span>
            <span> <%= product.imagen %> </span>
        
        </a>
            
        <%  }) %> 
        
        </ul>
        
        
        <% } else { %> 
        
            
        
            <h3 class="titulolist">Agregá algunos! </h3>
            <i class="far fa-dizzy"></i> 
        
        <% } %> 
        
        <% } else { %> 
        
        <h3 class="titulolist">Hay pocos productos, ingresá más!</h3>
        <i class="far fa-dizzy"></i> 
        <% } %>
        
        
        
        </section>
        
        <picture class="contemojimas">
            <a href="create"><i class="fas fa-plus-circle"></i></a>
        </picture>
        
        </main>  
 
<%- include("../includes/footer") %> 
</body>
</html>