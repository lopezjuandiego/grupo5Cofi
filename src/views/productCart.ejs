                id="tarjeta"
              />
              <label class="chk-txt" for="tarjeta">Pago con Tarjeta</label>
              <input
                class="chk-input"
                type="radio"
                name="Efectivo"
                value="Pago en Efectivo"
                id="efectivo"
              />
            
              <label class="chk-txt" for="efectivo">Pago en Efectivo</label>
              <input
                class="chk-input"
                type="radio"
                name="MercadoPago"
                value="MercadoPago"
                id="mercadoPago"
              />
              <label class="chk-txt" for="mercadoPago">MercadoPago</label>
              <input
                class="chk-input"
                type="radio"
                name="Transferencia"
                value="Transferencia"
                id="transferencia"
              />
              <label class="chk-txt" for="transferencia">Transferencia</label>
            </fieldset>
            <fieldset>
              <button class="btn-buy" type="submit">Finalizar compra</button>
            </fieldset>
