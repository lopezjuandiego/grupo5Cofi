<!DOCTYPE html>
<html lang="es">
<%- include('../includes/head.ejs') %>

    <body>
        <%- include("../includes/header") %>
            <main>

                <section class="contbannerlist">
                    <h2 class="bannerlist">
                        <%= locals.title ? title : null %>
                    </h2>

                </section>

                <% if (user !=null && user.admin) { %>


                    <section class="contlistado">
                        <% if (locals.users) { %>

                            <% if (users.length> 0) { %>

                                <% users.forEach(user=> { %>
                                    <article class="listagral">
                                        <a class="contentlista" href="/users/<%= user.id %> ">
                                            <% if (user.avatar) { %>
                                               <!--REVISAR ESTA LINEA PARA QUE MUESTRE LA FOTO-->
                                                <img class="contentimagen" src="/uploads/avatars<%= user.avatar %> "
                                                    alt="" srcset="">
                                                <% } %>
                                                    <ul class="contlis">
                                                        <li class="lilista">ID: <%= user.id %>
                                                        </li>
                                                        <li class="lilista">NOMBRE: <%= user.nombre %>
                                                        </li>

                                                        <li class="lilista">APELLIDO: <%= user.apellido %>
                                                        </li>

                                                        <li class="lilista">E-MAIL: <%= user.email %>
                                                        </li>
                                                        <!--REVISAR ESTA LINEA PARA QUE MUESTRE LA FOTO-->
                                                        <li class="lilista">FOTO: <%= user.avatar %>
                                                        </li>

                                                    </ul>
                                        </a>
                                    </article>
                                    <% }) %>
                                        <% } else { %>
                                            <section class="contsinproducto">
                                                <h3 class="titulolist">Agregá algunos productos! </h3>
                                                <i class="far fa-dizzy"></i>
                                            </section>

                                            <% } %>
                                                <% } else { %>
                                                    <h3 class="titulolist">Hay pocos productos, ingresá más!</h3>
                                                    <i class="far fa-dizzy"></i>
                                                    <% } %>
                    </section>

                    <% } else { %>


                        <section class="contlistado">
                            <h1 class="titulolist">Tenés que ser admin para ver la lista de usuarios</h1>
                        </section>

                        <% } %>




            </main>

            <%- include("../includes/footer") %>
    </body>

</html>