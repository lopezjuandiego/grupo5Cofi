<!DOCTYPE html>
<html lang="es">
<%- include('../includes/head.ejs') %>

    <body>
        <%- include("../includes/header") %>
            <main>

                <section class="contbannerlist">
                    <h2 class="bannerlist">
                        <%= locals.title ? title : null %>
                    </h2>

                </section>

                <% if (user !=null && user.admin) { %>
 
                   
                    <form action="/profile/search/<%= user.id %> " method="GET">
                      <i class="fas fa-search"></i>
                      <input type="search" name="buscar" placeholder="Buscar por apellido">
                      <button class="boton1" type="submit">Buscar</button>
                    </form>
                        
                    <section class="contlistado">
                        <% if (locals.users) { %>

                            <% if (users.length> 0) { %>

                                <% users.forEach(user => { %>
                                    <article class="listagral">
                                        <a class="contentlista" href="/users/profile/<%= user.id %> ">
                                            <% if (user.avatar) { %>
                                                <img class="contentimagen" src="/uploads/avatars/<%= user.avatars.Url %> "
                                                    alt="" srcset="">
                                                <% } %>
                                                    <ul class="contlis">
                                                       
                                                        <li class="lilista">NOMBRE: <%= user.nombre %>
                                                        </li>

                                                        <li class="lilista">APELLIDO: <%= user.apellido %>
                                                        </li>

                                                        <li class="lilista">E-MAIL: <%= user.email %>
                                                        </li>
                                                       

                                                    </ul>
                                        </a>
                                    </article>
                                    <% }) %>
                 
                                    <% } %>
                                    <% } %>
                                    
                    <% } else { %>

                    <section class="contlistado">
                        <h1 class="titulolist">Ten√©s que ser admin para ver la lista de usuarios</h1>
                    </section>
                    <form action="/users/logout" method="post">
                        <button class= "boton-logout" type="submit">LOGOUT</button>
                  </form>
                    


                    
                    

                        

                        <% } %>
            </main>

            <%- include("../includes/footer") %>
    </body>

</html>